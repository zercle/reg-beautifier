{
  "name": "reg-beautifier",
  "version": "1.0.2",
  "description": "A Modified UI for REG KKU Website",
  "main": "manifest.json",
  "repository": "https://github.com/zercle/reg-beautifier",
  "author": "Zercle Technology Co., Ltd.",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "bun run gulp",
    "build": "NODE_ENV=production bun run gulp build",
    "build:dev": "bun run gulp build",
    "watch": "bun run gulp watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,scss}\"",
    "version": "node scripts/sync-version.js && git add manifest.json",
    "preversion": "bun test && bun run lint",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {},
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@types/chrome": "^0.1.16",
    "browser-sync": "^3.0.4",
    "del": "^7.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-if": "^3.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-watch": "^5.0.1",
    "happy-dom": "^19.0.2",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard-scss": "^16.0.0"
  }
}
